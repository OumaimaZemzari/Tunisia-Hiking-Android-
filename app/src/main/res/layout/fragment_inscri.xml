<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/mat2"


    android:id="@+id/main">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/o"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/textV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="false"
            android:text="Inscription"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/cast_libraries_material_featurehighlight_outer_padding" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="Nom et prénom"
            android:id="@+id/name"
            android:drawableLeft="@drawable/nom"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:layout_margin="6dp"
            android:paddingLeft="5dp"
            android:layout_weight="0.26"
            android:backgroundTint="@android:color/transparent"
            android:textColorLink="?attr/colorBackgroundFloating"
            android:textColorHint="@color/cardview_light_background" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="Email"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_below="@id/name"
            android:drawableLeft="@drawable/mail"
            android:background="@android:color/transparent"
            android:drawablePadding="6dp"
            android:layout_margin="6dp"
            android:paddingLeft="5dp"

            android:textColorHint="@color/cardview_light_background"
            android:textColorLink="?attr/colorBackgroundFloating" />
        <EditText
            android:layout_width="match_parent"
            android:hint="mot de passe"
            android:id="@+id/pass"
            android:background="@color/white"
            android:layout_below="@id/email"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="6dp"
            android:inputType="textPassword"
            android:layout_margin="6dp"
            android:paddingLeft="5dp"
            android:layout_height="42dp"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/cardview_light_background"
            android:textColorLink="?attr/colorBackgroundFloating" />
        <EditText
            android:layout_width="match_parent"
            android:hint="confirmer votre mot de passe"
            android:id="@+id/ver"
            android:inputType="textPassword"
            android:background="@color/white"
            android:layout_below="@id/pass"
            android:layout_margin="6dp"
            android:paddingLeft="5dp"
            android:textSize="17dp"
            android:drawableLeft="@drawable/okpassword"
            android:drawablePadding="6dp"
            android:layout_height="42dp"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/cardview_light_background"
            android:textColorLink="?attr/colorBackgroundFloating" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:inputType="number"
            android:layout_margin="6dp"
            android:hint="numéro de téléphone"
            android:id="@+id/num"
            android:layout_below="@id/ver"
            android:drawableLeft="@drawable/tel"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:backgroundTint="@android:color/transparent"
            android:textColorLink="?attr/colorBackgroundFloating"
            android:textColorHint="@color/cardview_light_background" />




    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:id="@+id/save"

        android:backgroundTint="@color/colorPrimary"
        style="@style/Widget.AppCompat.Button"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="91dp"
        android:layout_marginEnd="91dp" />
</RelativeLayout>